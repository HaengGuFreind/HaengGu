<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/notosanskr_medium</item>
        <item name="android:textSize">9.5dp</item>
    </style>

    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:showDividers">middle</item>
        <item name="android:dividerPadding">10dp</item>
        <item name="colorPrimary">@color/white</item>              <!-- 배경 -->
        <item name="android:textColorPrimary">#ff7171</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">#c4c4c4</item>     <!-- 탭바 텍스트 -->
        <item name="colorAccent">#ff7171</item>                    <!-- 하단 움직이는 바 색-->
        <item name="android:elevation">0dp</item>
    </style>

    <style name="TabTextStyle" parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/pretendard</item>
        <item name="android:fontWeight">700</item>
        <item name="android:paddingHorizontal">13dp</item>
        <item name="android:paddingVertical">9dp</item>
    </style>
</resources>