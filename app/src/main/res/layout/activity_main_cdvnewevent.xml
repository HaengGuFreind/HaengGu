<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/activity_main_cdvCustomEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.748">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/activity_main_ivNewEvent1"
                android:layout_width="140dp"
                android:layout_height="131dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="17dp"
                android:paddingTop="17dp"
                android:src="@drawable/ic_temp_promo1"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="top">
                <TextView
                    android:id="@+id/activity_main_tvNewEvent1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="8dp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/notosanskr_bold"
                    android:text="2021 디자인살롱 서울 컨퍼런스"
                    android:textColor="#383838"></TextView>
                <TextView
                    android:id="@+id/activity_main_tvNewEvent2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12.5sp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/notosanskr_regular"
                    android:text="디자인 및 소비자 트렌드 인사이트를 얻을 수 있는 디자인살롱 서울 컨퍼런스가 온..."
                    android:includeFontPadding="false"
                    android:textColor="#383838"></TextView>
                <TextView
                    android:id="@+id/activity_main_tvNewEvent3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12.5sp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/notosanskr_regular"
                    android:text="2021.11.08 ~ 2021.12.10"
                    android:textColor="#909090"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/activity_main_ivNewEvent2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/ic_icon_tag_design"></ImageView>
                    <ImageView
                        android:id="@+id/activity_main_ivNewEvent3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/ic_icon_tag_design"></ImageView>
                    <ImageView
                        android:id="@+id/activity_main_ivNewEvent4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/ic_icon_tag_design"></ImageView>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"></View>
                    <TextView
                        android:id="@+id/activity_main_tvNewEvent4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:drawableLeft="@drawable/ic_icon_star"
                        android:drawablePadding="0dp"
                        android:fontFamily="@font/notosanskr_regular"
                        android:includeFontPadding="false"
                        android:text="19"
                        android:textColor="#797979"></TextView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>