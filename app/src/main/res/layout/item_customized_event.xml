<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_customized_event"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/ic_launcher_background"
        app:riv_corner_radius="5dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/pretendard"
        android:textFontWeight="400"
        android:includeFontPadding="false"
        android:lineSpacingExtra="5sp"
        android:text="text"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_customized_event"
        tools:layout_editor_absoluteX="5dp" />

    <TextView
        android:id="@+id/fragment_tv_dday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard"
        android:textFontWeight="700"
        android:includeFontPadding="false"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="0sp"
        android:text="D-7"
        android:textColor="@color/haenggu_main"
        android:textSize="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/fragment_tv_content"
        app:layout_constraintTop_toBottomOf="@+id/fragment_tv_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard"
        android:textFontWeight="400"
        android:includeFontPadding="false"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="0sp"
        android:text="2021.11.08 ~"
        android:textColor="#909090"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_tv_dday"
        app:layout_constraintEnd_toEndOf="@+id/fragment_tv_content"
        app:layout_constraintTop_toTopOf="@+id/fragment_tv_dday" />

</androidx.constraintlayout.widget.ConstraintLayout>