<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_chat_civ"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_chat_tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:lineSpacingExtra="8.1sp"
        android:text="Heeyoon"
        android:textColor="#383838"
        android:textSize="14dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@+id/fragment_chat_civ"
        app:layout_constraintTop_toTopOf="@+id/fragment_chat_civ" />

    <TextView
        android:id="@+id/fragment_chat_tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="42dp"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0sp"
        android:text="저 옥달 공연 작년에 온라인으로 보고 2년..."
        android:textColor="#797979"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fragment_chat_tv_nickname"
        app:layout_constraintTop_toBottomOf="@+id/fragment_chat_tv_nickname" />

    <TextView
        android:id="@+id/fragment_chat_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0sp"
        android:text="21분 전"
        android:textColor="#797979"
        android:textSize="12dp"
        android:layout_marginRight="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_chat_tv_nickname" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_chat_civ_point"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@color/haenggu_main"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_chat_tv_content"
        app:layout_constraintEnd_toEndOf="@+id/fragment_chat_tv_time" />

</androidx.constraintlayout.widget.ConstraintLayout>