<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/activity_main_cdvCustomEvent"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.748">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/activity_main_ivCustomEvent"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_temp_promo1"></ImageView>
            <TextView
                android:id="@+id/activity_main_tvCustomEvent1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.32dp"
                android:layout_marginBottom="8dp"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosanskr_regular"
                android:text="청친강소 온라인 채용 설명회"
                android:textColor="#000000"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/activity_main_tvCustomEvent2"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/notosanskr_bold"
                    android:text="D-7"
                    android:includeFontPadding="false"
                    android:textColor="#FF7171"></TextView>
                <TextView
                    android:id="@+id/activity_main_tvCustomEvent3"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:textSize="12sp"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/notosanskr_regular"
                    android:text="2021.11.08"
                    android:textColor="#909090"></TextView>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>