<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="106dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/fragment_find_iv"
        android:layout_width="76dp"
        android:layout_height="76dp"
        app:riv_corner_radius="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_find_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0.4sp"
        android:text="첫째 날에 같이 가실 분~"
        android:textColor="#383838"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_find_iv"
        app:layout_constraintTop_toTopOf="@+id/fragment_find_iv" />

    <TextView
        android:id="@+id/fragment_find_tv_eventname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_medium"
        android:lineSpacingExtra="0.9sp"
        android:text="2021 디자인살롱 서울 컨퍼런스"
        android:textColor="#383838"
        android:textSize="12.5dp"
        android:includeFontPadding="false"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fragment_find_tv_title"
        app:layout_constraintTop_toBottomOf="@+id/fragment_find_tv_title" />

    <TextView
        android:id="@+id/fragment_find_tv_period"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_regular"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="0sp"
        android:text="2021.12.9 ~ 2021.12.10"
        android:textColor="#7b7b7b"
        android:textSize="12.5dp"
        android:includeFontPadding="false"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fragment_find_tv_eventname"
        app:layout_constraintTop_toBottomOf="@+id/fragment_find_tv_eventname" />

    <TextView
        android:id="@+id/fragment_find_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_medium"
        android:includeFontPadding="false"
        android:lineSpacingExtra="-0.4sp"
        android:text="7분 전"
        android:textColor="#383838"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_find_iv"
        app:layout_constraintStart_toStartOf="@+id/fragment_find_tv_period" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_find_civ"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginBottom="7.5dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/fragment_find_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0sp"
        android:text="조은지"
        android:textColor="#383838"
        android:textSize="12.5dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_find_civ"
        app:layout_constraintEnd_toStartOf="@+id/fragment_find_civ"
        app:layout_constraintTop_toTopOf="@+id/fragment_find_civ" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f2f2f2"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>