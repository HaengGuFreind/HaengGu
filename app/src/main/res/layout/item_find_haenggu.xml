<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="116dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/fragment_find_iv"
        android:layout_width="76dp"
        android:layout_height="84dp"
        app:riv_corner_radius="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_find_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:fontFamily="@font/pretendard"
        android:textFontWeight="700"
        android:includeFontPadding="false"
        android:text="첫째 날에 같이 가실 분~"
        android:textColor="@color/standard_black"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/fragment_find_tv_time"
        app:layout_constraintStart_toEndOf="@+id/fragment_find_iv"
        app:layout_constraintTop_toTopOf="@+id/fragment_find_iv" />

    <TextView
        android:id="@+id/fragment_find_tv_eventname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard"
        android:textFontWeight="400"
        android:text="2021 디자인살롱 서울 컨퍼런스"
        android:textColor="@color/standard_black"
        android:textSize="14dp"
        android:includeFontPadding="false"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fragment_find_tv_title"
        app:layout_constraintTop_toBottomOf="@+id/fragment_find_tv_title" />

    <TextView
        android:id="@+id/fragment_find_tv_period"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard"
        android:textFontWeight="500"
        android:text="2021.12.9"
        android:textColor="#7b7b7b"
        android:textSize="13dp"
        android:includeFontPadding="false"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fragment_find_tv_eventname"
        app:layout_constraintTop_toBottomOf="@+id/fragment_find_tv_eventname" />

    <TextView
        android:id="@+id/fragment_find_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/pretendard"
        android:textFontWeight="400"
        android:includeFontPadding="false"
        android:text="7분 전"
        android:textColor="@color/standard_black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_find_tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_find_tv_title" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_find_civ"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_find_tv_period" />

    <TextView
        android:id="@+id/fragment_find_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:fontFamily="@font/pretendard"
        android:includeFontPadding="false"
        android:text="조은지"
        android:textColor="@color/standard_black"
        android:textSize="12dp"
        android:maxLength="8"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_find_civ"
        app:layout_constraintEnd_toStartOf="@+id/fragment_find_civ"
        app:layout_constraintTop_toTopOf="@+id/fragment_find_civ" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f2f2f2"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>