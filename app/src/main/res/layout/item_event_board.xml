<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_event_board_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard"
        android:text="체리필터 공연 같이 가실 분 구해요!"
        android:textColor="@color/standard_black"
        android:textFontWeight="400"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_event_board_profile_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="@+id/tv_event_board_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_event_board_title" />

    <TextView
        android:id="@+id/tv_event_board_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard"
        android:text="낭만고양이"
        android:textColor="@color/standard_black"
        android:textFontWeight="400"
        android:textSize="12dp"
        android:layout_marginRight="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/civ_event_board_profile_img"
        app:layout_constraintTop_toTopOf="@+id/civ_event_board_profile_img"/>

    <View
        android:id="@+id/divide_line01"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray04"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_board_title"/>


</androidx.constraintlayout.widget.ConstraintLayout>